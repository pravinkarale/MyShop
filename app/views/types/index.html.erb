<head>
<style>
table, th, td {
    border: 1px solid black;
}
</style>
</head>


<center><h2>LISTING TYPES</h2></center>
<%@sr_no=0%>
<div id="types_show">
  <table>
    <tr>
      <th>SR NO</th>
      <th>Type</th>
      <th colspan="3">Operation</th>
  </tr>
    </tr>

  <% @types.each do |type| %>

    <tr>
      <%@sr_no += 1%>
      <td><%=@sr_no%></td>
      <td><%= type.Type %></td>
      <td><%= link_to 'Show', type %></td>
      <td><%= link_to 'Edit', edit_type_path(type) %></td>
      <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</div>
</table>

<br />

<%= button_to 'New Type', new_type_path %></br>
<%= button_to 'Dashboard',:controller=>'material',:action=>'dashboard' %>